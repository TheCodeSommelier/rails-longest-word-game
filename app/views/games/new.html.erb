
<div class="d-flex">
  <h1>New game</h1>

  <ul class="ul-no-deco">
  <% @letters.each do |letter| %>
    <li class="li-blue"><%= letter %></li>
  <% end %>
  </ul>
  <div class="form-display">
    <form action="/score" method="post" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <label for="word">What is the longest word you can find?</label>
      <input type="text" name="word" id="word" placeholder="Type in your word..." />
      <input type="submit" />
    </form>
  </div>
</div>
